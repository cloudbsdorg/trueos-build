/*

Our default Jenkins pipeline we use to create our on-commit
snapshot builds of freebsd/releng/12.0 branch.

*/

pipeline {
  agent { label 'TrueOS-Build-Pkgbase' }

  environment {
    GH_ORG = 'trueos'
    GH_REPO = 'trueos'
    POUDRIERE_BASE = 'freebsd120-pkgbase-base'
    POUDRIERE_PORTS = 'freebsd120-pkgbase-ports'
    TRUEOS_VERSION = '12.0'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      post {
        always {
          archiveArtifacts artifacts: 'release/port-logs/latest/**', fingerprint: false
          archiveArtifacts artifacts: 'release/src-logs/**', fingerprint: false
        }
      }
      environment {
         SIGNING_KEY = credentials('a50f9ddd-1460-4951-a304-ddbf6f2f7990')
	 TRUEOS_MANIFEST="${env.WORKSPACE}/manifests/freebsd12.0-pkgbase.json"
      }
      steps {
        sh 'make ports'
      }
    }
    stage('ISO') {
      post {
        always {
          archiveArtifacts artifacts: 'release/iso-logs/**', fingerprint: false
        }
      }
      environment {
         SIGNING_KEY = credentials('a50f9ddd-1460-4951-a304-ddbf6f2f7990')
	 TRUEOS_MANIFEST="${env.WORKSPACE}/manifests/freebsd12.0-pkgbase.json"
      }
      steps {
        sh 'make iso'
      }
    }
    stage('Publish') {
      steps {
        sshagent (credentials: ['ef8c8aff-3b80-4a6a-9e0c-4d015bc5e945']) {
          sh 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null trueos@cdn1.tn.ixsystems.com mkdir -p /cdn/pkg.trueos.org/pkg/freebsd12.0-pkgbase/FreeBSD:12:amd64/latest || true'
          sh 'cd release/packages && rsync -av --delete-after --delay-updates -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" . trueos@cdn1.tn.ixsystems.com:/cdn/pkg.trueos.org/pkg/freebsd12.0-pkgbase/FreeBSD:12:amd64/latest/'
          sh 'ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null trueos@cdn1.tn.ixsystems.com mkdir -p /cdn/pkg.trueos.org/iso/freebsd12.0-pkgbase/ || true'
          sh 'rsync -av --delete-after --delay-updates -e "ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" release/iso/ trueos@cdn1.tn.ixsystems.com:/cdn/pkg.trueos.org/iso/freebsd12.0-pkgbase/'
        }
      }
    }
  }
  post {
    success {
      script {
        cleanWs notFailBuild: true
      }
    }
  }
}
